<div class="uk-flex uk-flex-center uk-flex-middle uk-grid-small" uk-grid>
    {{> title-card title="Point of Interest Web App" subTitle="Your details..."}}
    {{> main-menu }}
</div>

<div class="uk-container uk-margin">
    <div class="uk-child-width-expand uk-flex-center uk-flex-middle uk-text-center" uk-grid>
        <div class="uk-width-auto@m">
            <img width="300" src="images/poi.png">
        </div>
        <div class="uk-width-expand@m">
            <div class="uk-card uk-card-default uk-width-xlarge uk-card-body uk-box-shadow-large">
                <h3 class="uk-card-title uk-text-center">Your Details: </h3>
                {{> settings-form}}
                <h3 class="uk-card-title uk-text-center">Delete Account: </h3>
                <form action="/deleteUser" method="POST">
                    <button class="uk-button uk-button-primary uk-button-danger uk-width-1-1 uk-margin-small-bottom">Delete Account</button>
                </form>
            </div>
        </div>
    </div>
</div>